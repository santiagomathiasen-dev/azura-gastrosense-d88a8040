{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "paths": {
            "@/*": [
                "../src/*"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "."
    ],
    "exclude": [
        "../node_modules"
    ]
}